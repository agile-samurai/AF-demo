[
  {
    "name": "${env}-${name}",
    "image": "wurstmeister/kafka:latest",
    "memory": 1024,
    "essential": true,
    "command": [],
    "environment": [
      {
        "name": "KAFKA_BROKER_ID",
        "value": "1"
      },
      {
        "name": "KAFKA_ZOOKEEPER_CONNECT",
        "value": "${kafka_internal_ip}:2181"
      },
      {
        "name": "KAFKA_ADVERTISED_LISTENERS",
        "value": "PLAINTEXT://${kafka_internal_ip}:9092"
      },
      {
        "name": "KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR",
        "value": "1"
      },
      {
        "name": "KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS",
        "value": "0"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${env}-${name}"
      }
    },
    "portMappings": [
      {
        "containerPort": 9092,
        "hostPort": 9092
      }
    ]
  }
]
