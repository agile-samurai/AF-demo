[
  {
    "name": "${env}-${name}",
    "image": "${image}:latest",
    "memory": 1024,
    "essential": true,
    "command": [],
    "environment": [
      {
        "name": "ZOOKEEPER_CLIENT_PORT",
        "value": "2181"
      },
      {
        "name": "ZOOKEEPER_TICK_TIME",
        "value": "2000"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${env}-${name}"
      }
    },
    "portMappings": [
      {
        "containerPort": 2181,
        "hostPort": 2181
      }
    ]
  }
]
